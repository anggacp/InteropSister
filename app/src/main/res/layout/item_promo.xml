<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_place"
    android:layout_width="180dp"
    android:layout_height="220dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/promo_image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/promo_discount"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#73C000"
            android:text="00%"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/promo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promo_image"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#2d2d2d"
            android:text="Promo title"/>

        <TextView
            android:id="@+id/promo_merch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promo_title"
            android:textSize="20sp"
            android:textColor="#2d2d2d"
            android:text="Place title"/>

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/promo_merch"
            android:src="@drawable/ic_baseline_location_on_24"/>

        <TextView
            android:id="@+id/promo_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promo_merch"
            android:layout_toEndOf="@id/icon_location"
            android:textSize="18sp"
            android:textColor="#2d2d2d"
            android:text="Location title"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>